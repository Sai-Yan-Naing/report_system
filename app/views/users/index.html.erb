<div class="report-body">
	<div class="container-fluid mt-80 rp-bg">
		<div class="row">
			<div class="col-md-12">
				<% if is_admin? %>
					<h4><%= link_to "Add a New User", new_user_path, :class => "cs-btn new-report btn btn-success" %>
						| <%= link_to "View All Users", users_path, :class => "cs-btn new-report btn btn-info" %>
						| <%= link_to "View All Reports", reports_path, :class => "cs-btn new-report btn btn-info" %>
					</h4>
					  <div>
					  	<div class="cs-rp-row cs-tb-header">
					  		<div class="cs-rp-col-date cs-rp-col-date-header">Developer</div>
					  		<div class="cs-rp-col">email</div>
					  		<div class="cs-rp-col">Department</div>
					  		<div class="cs-rp-col">Team</div>
					  		<div class="cs-rp-col-action cs-rp-col-action-header">Action</div>
					  	</div>
					  	<% @users.each do |user| %>
					  	<div class="cs-rp-row cs-tb-body">
					  		<div class="cs-rp-col-date"><%= user.name %></div>
					  		<div class="cs-rp-col"><%= user.email %></div>
					  		<div class="cs-rp-col"><%= user.department %></div>
					  		<div class="cs-rp-col"><%= user.team %></div>
					  		<div class="cs-rp-col-action">
					  			<%= link_to "View Reports", viewreports_path(user.id), :class => "cs-btn" %><br>
					  			<%= link_to "Show", user_path(user.id), :class => "cs-btn" %> | <%= link_to "Edit", edit_user_path(user.id), :class => "cs-btn" %> | <%= link_to "Delete", user_path(user.id), method: :delete, data: { confirm: 'Are you want to delete?' }, :class => "cs-btn cs-btn-danger" %>
					  		</div>
					  	</div>
					  	<% end %>
					  </div>
				<% else %>
					<h4><%= link_to "Add a New Report", new_report_path, :class => "cs-btn new-report btn btn-success" %>
						 | <%= link_to "View All Users", users_path, :class => "cs-btn new-report btn btn-info" %>
						 | <%= link_to "View All Reports", reports_path, :class => "cs-btn new-report btn btn-info" %>
					</h4>
					  <div>
					  	<div class="cs-rp-row cs-tb-header">
					  		<div class="cs-rp-col-date cs-rp-col-date-header">Developer</div>
					  		<div class="cs-rp-col">email</div>
					  		<div class="cs-rp-col">Department</div>
					  		<div class="cs-rp-col">Team</div>
					  		<div class="cs-rp-col-action cs-rp-col-action-header">Action</div>
					  	</div>
					  	<% @users.each do |user| %>
					  	<div class="cs-rp-row cs-tb-body">
					  		<div class="cs-rp-col-date"><%= user.name %></div>
					  		<div class="cs-rp-col"><%= user.email %></div>
					  		<div class="cs-rp-col"><%= user.department %></div>
					  		<div class="cs-rp-col"><%= user.team %></div>
					  		<div class="cs-rp-col-action">
					  			<%= link_to "View Reports", viewreports_path(user.id), :class => "cs-btn" %><br>
					  			<%= link_to "Show", report_path(user.id), :class => "cs-btn" %>
					  			<% if current_user.id == user.id %>
					  			 | <%= link_to "Edit", edit_user_path(user.id), :class => "cs-btn" %>
					  			 <% end %>
					  		</div>
					  	</div>
					  	<% end %>
					  </div>
				<% end%>
					
			</div>
		</div>
	</div>

</div>

<div class="cs-pagination mt-5 d-flex justify-content-center">
	<%== pagy_bootstrap_nav(@pagy).html_safe %>
</div>