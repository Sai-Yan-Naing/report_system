<%= provide(:title, "Update") %>
<div class="container-fluid mt-80">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<h3>Update in Reporting System</h3>
			<%= form_with(model: @report, local: true) do |f| %>
				<% if @report.errors.any? %>
				    <div id="error_explanation">
				      <ul>
				        <% @report.errors.full_messages.each do |msg| %>
				          <li><%= msg %></li>
				        <% end %>
				      </ul>
				    </div>
				  <% end %>
				 <div class="form-group">
					<%= f.hidden_field :user_id, value: "#{current_user.id}", :class => "form-control" %>
			    </div>
			    <div class="form-group">
					<%= f.label :date, "Date" %>
					<%= f.date_field :date, :class => "form-control" %>
			    </div>

			    <div class="form-group">
					<%= f.label :morning %>
					<%= f.text_area :morning, :class => "form-control cs-textarea" %>
			    </div>
			    <div class="form-group">
					<%= f.label :evening %>
					<%= f.text_area :evening, :class => "form-control cs-textarea" %>
			    </div>
			    <div class="form-group">
					<%= f.label :remark %>
					<%= f.text_area :remark, :class => "form-control cs-textarea" %>
			    </div>
			    <div class="form-group">
			    	<%= f.submit :class => "form-control btn btn-success" %>
				</div>
			    <div class="form-group">
			    	<%= link_to "Back", reports_path, :class => "form-control btn btn-success" %>
			    </div>
			<% end %>
			
		</div>
		<div class="col-md-4"></div>
	</div>
</div>