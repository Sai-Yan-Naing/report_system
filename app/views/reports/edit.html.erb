<%= provide(:title, "Update") %>
<div class="container-fluid mt-5">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<h3>Update in Reporting System</h3>
			<%= form_with(model: @report, local: true) do |f| %>
				<div class="form-group">
					<%= f.label :rp_id, "Name" %>
					<%= f.text_field :rp_id, :class => "form-control" %>
			    </div>
			    <div class="form-group">
					<%= f.label :morning %>
					<%= f.text_field :morning, :class => "form-control" %>
			    </div>
			    <div class="form-group">
					<%= f.label :evening %>
					<%= f.text_field :evening, :class => "form-control" %>
			    </div>
			    <div class="form-group">
			    	<%= f.submit :class => "form-control btn btn-success" %>
				</div>
			    <div class="form-group">
			    	<%= link_to "Back", reports_path, :class => "form-control btn btn-success" %>
			    </div>
			<% end %>
			
		</div>
		<div class="col-md-4"></div>
	</div>
</div>